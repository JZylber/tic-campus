---
import "../styles/global.css";

interface Props {
  dataSheetId?: string;
}

const { dataSheetId } = Astro.props;
---

<script>
  import sectionStore from "../scripts/alpine/data/section";
  document.addEventListener("alpine:init", () => {
    Alpine.data("sectionData", sectionStore);
  });
</script>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Special+Elite&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
    />
    <title>TIC Campus</title>
  </head>
  <body class="w-full sm:w-[95%] max-w-[1280px] mx-auto">
    <div
      class="w-fill h-[calc(100vh-64px-1rem)] flex font-lato relative lg:gap-x-4"
      x-data="sectionData()"
      x-init=`$store.pageData.setDataSheetId("${dataSheetId??""}")`
    >
      <slot />
    </div>
  </body>
</html>
